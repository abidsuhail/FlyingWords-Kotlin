<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="2dp"
    android:orientation="vertical"
    android:gravity="end"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--make liner layout-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sender_chat_layout"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/same_user_story_reply_photo_sdv"
            android:layout_width="66dp"
            android:layout_height="80dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:placeholderImage="@color/primary_light" />

        <TextView
            android:id="@+id/same_user_story_reply_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:padding="8dp"
            android:maxWidth="240dp"
            android:textSize="16dp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            tools:text="Nice photo ansmdb sdnmbsa smnbanmsbd nmfsd mnbsdbmfs mbdf" />

    </LinearLayout>

    <TextView
        android:id="@+id/same_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="end"
        android:visibility="gone"
        android:textSize="12dp"
        tools:text="Seen" />

    <TextView
        android:id="@+id/same_user_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="12dp"
        android:layout_gravity="end"
        android:visibility="gone"
        tools:text="12:50PM-5Sept2019" />

</LinearLayout>